<p id="notice"><%= notice %></p>

<h1>Teacher's Dashboard</h1><br>
<h2>Welcome <%= @teacher.name %></h2><br>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @teacher.students.each do |s| %>
      <tr>
        <td><%= s.name %></td>
        <td><%= s.email %></td>
        <td><%= link_to 'Edit Current Student', edit_student_path(s) %></td>
        <td><%= link_to 'Add Parent', new_parent_path(student_id: s.id) %></td>
        <td><%= link_to 'Destroy', s, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% @student.grades.each do |g| %>
  <div><%= g.assignment %></div>
  <div><%= g.score %></div>
  <div><%= link_to 'Edit Grades', edit_grade_path(g) %></div>
<% end %>

<br>
<div>
  <% if session[:user_type] == "teacher" %>
    <%= link_to "Edit Password", edit_teacher_path(session[:user_id]) %>
  <% end %>
</div>
<div>
  <%= link_to 'New Student', new_student_path(student_id: session[:user_id]) %>
</div>

<div>
  <%= link_to 'Add New Teacher', new_teacher_path %>
</div>
